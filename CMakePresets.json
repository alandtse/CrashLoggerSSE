{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "vcpkg",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows-skse",
        "VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/cmake",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded$<$<CONFIG:Debug>:Debug>DLL"
      }
    },
    {
      "name": "msvc",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/permissive- /Zc:preprocessor /EHa $penv{CXXFLAGS}"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-msvc-x64",
          "enableMicrosoftCodeAnalysis": true,
          "enableClangTidyCodeAnalysis": true
        }
      }
    },
    {
      "name": "clang",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/permissive- /EHa -Wno-overloaded-virtual -Wno-delete-non-abstract-non-virtual-dtor $penv{CXXFLAGS}",
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-clang-x64",
          "enableMicrosoftCodeAnalysis": true,
          "enableClangTidyCodeAnalysis": true
        }
      }
    },
    {
      "name": "build-tests",
      "displayName": "Build Tests",
      "hidden": true,
      "description": "Include test suites in the build.",
      "cacheVariables": {
        "BUILD_TESTS": {
          "type": "STRING",
          "value": "ON"
        }
      }
    },
    {
      "name": "Debug-MSVC",
      "inherits": [
        "vcpkg",
        "build-tests",
        "msvc"
      ],
      "displayName": "Debug",
      "description": "Debug build for testing.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug-msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Debug"
        }
      }
    },
    {
      "name": "Release-MSVC",
      "inherits": [
        "vcpkg",
        "msvc"
      ],
      "displayName": "Release",
      "description": "Optimized release build.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release-msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Release"
        }
      }
    },
    {
      "name": "Debug-Clang",
      "inherits": [
        "vcpkg",
        "build-tests",
        "clang"
      ],
      "displayName": "Debug",
      "description": "Debug build for testing.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/debug-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Debug"
        }
      }
    },
    {
      "name": "Release-Clang",
      "inherits": [
        "vcpkg",
        "clang"
      ],
      "displayName": "Release",
      "description": "Optimized release build.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/release-clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Release"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Release-MSVC",
      "displayName": "Release (MSVC)",
      "configurePreset": "Release-MSVC",
      "description": "Optimized release build."
    },
    {
      "name": "Debug-MSVC",
      "displayName": "Debug (MSVC)",
      "configurePreset": "Debug-MSVC",
      "description": "Debug build for testing."
    },
    {
      "name": "Release-Clang",
      "displayName": "Release (Clang)",
      "configurePreset": "Release-Clang",
      "description": "Optimized release build."
    },
    {
      "name": "Debug-Clang",
      "displayName": "Debug (Clang)",
      "configurePreset": "Debug-Clang",
      "description": "Debug build for testing."
    }
  ],
  "testPresets": [
    {
      "name": "All-Tests",
      "displayName": "All Tests",
      "configurePreset": "Debug-MSVC",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": false
      }
    },
    {
      "name": "Unit-Tests",
      "displayName": "Unit Tests",
      "description": "Runs tests that do not require any Skyrim module loaded into the process.",
      "inherits": "All-Tests",
      "filter": {
        "exclude": {
          "label": "[integration],[e2e]"
        }
      }
    },
    {
      "name": "Integration-Tests",
      "displayName": "Integration Tests",
      "description": "Runs tests that interact with a Skyrim module at rest (do not require the Skyrim module to have run any main function).",
      "inherits": "All-Tests",
      "filter": {
        "include": {
          "label": "[integration]"
        }
      }
    },
    {
      "name": "E2E-Tests",
      "displayName": "End-to-End Tests",
      "description": "Runs test that depend on a fully running Skyrim engine in the process.",
      "inherits": "All-Tests",
      "filter": {
        "include": {
          "label": "[e2e]"
        }
      }
    }
  ]
}
