vcpkg_from_github(
    OUT_SOURCE_PATH SOURCE_PATH
    REPO alandtse/CommonLibVR
    REF 0e61b140ca889b8d77f6584c7a3d3f94990abee7
    SHA512 a44833f0389ad78ecda1d1a139453a9e6dc8967e9af2aaf7d56ab3f1967b356cb1373d9ec94dd1fe240422112a2aa1f0b5e91ae447f158c3113a0beb3733c8e0
